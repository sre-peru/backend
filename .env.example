# Server Configuration
PORT=8080
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string
MONGODB_DB_NAME=your_database_name
MONGODB_COLLECTION_NAME=your_collection_name

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=30m

# CORS Configuration
# You can specify multiple origins separated by commas
# For development: http://localhost:5173
# For production: https://your-frontend-app.vercel.app
# For both: http://localhost:5173,https://your-frontend-app.vercel.app
CORS_ORIGIN=https://your-frontend-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
